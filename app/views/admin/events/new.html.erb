<h1>New event</h1>

<% form_for([:admin, @event]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :talk %>
  <ul>
  <% Talk.all.each do|talk| %>
  <li>
    <%= check_box_tag "ids[]", talk.id, false -%>
<%#= check_box_tag "talk[speaker_ids][]", speaker.id, false -%>
<%= link_to talk.title, talk_path(talk) -%>
  </li>

  <%end%>
  </ul>
</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_events_path %>